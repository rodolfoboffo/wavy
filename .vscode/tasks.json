{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build solution",
            "command": "cl.exe",
            "args": [
                "/O2",
                "/nologo",
                "/Fe${workspaceFolder}\\wavy.exe",
                "${cwd}/main.c"
            ],
            "group": "build",
            "detail": "Compiles wavy."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Clean solution",
            "command": "del.exe",
            "args": [
                "*.exe",
                "*.pdb",
                "*.obj",
                "*.ilk",
            ],
            "group": "build",
            "detail": "Deletes all output files generated by the build task."
        }
    ]
}